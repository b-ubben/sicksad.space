---
import BaseLayout from '../layouts/BaseLayout.astro'

const actions = [
  {
    href: '//sicksadgirls.com',
    text: 'Shop'
  },
  {
    href: 'https://youtu.be/uK8dYSbaWIs',
    text: 'Moon Music Video'
  },
  {
    href: 'https://www.etsy.com/listing/1142041034/preorder-bathing-in-the-blood-of-enemies?ref=share_v4_lx',
    text: 'Bloody Tee Preorder'
  },
]

const socials = [
  {
    text: 'SickSadGirls on Youtube.com',
    href: 'https://youtube.com/channel/UCKjdgz_vJmicJBzmM672qWw',
    icon: 'youtube',
  },
  {
    text: 'SickSadGirls on Instagram',
    href: 'https://instagram.com/sick.sad.girls',
    icon: 'instagram',
  },
  {
    text: 'SickSadGirls on Twitter',
    href: 'http://twitter.com/sick_sad_girls',
    icon: 'twitter',
  },
  {
    text: 'SickSadGirls on TikTok',
    href: 'https://vm.tiktok.com/TTPd6D6Myo/',
    icon: 'tik-tok',
  },
]

const year = new Date().getFullYear()
---

<style lang="scss">


  a {
    border: 4px solid transparent;
    box-shadow: 0px 8px 0px transparent;

    &:focus,
    &:hover {
      border: 4px solid var(--color-black);
      box-shadow: 0px 8px 0px var(--color-black);
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .main {
    padding: 1rem;

    &--title {
      background-color: var(--color-white);
      font-size: 4rem;
      margin: 0;
      padding: 0.25rem;
      text-align: center;
      text-transform: uppercase;
    }

    &--actions {
      font-size: 3rem;
      margin-top: 2rem;

      ul {
        padding: 0;
        margin: 0;

        li {
          margin-top: 2rem;
          text-transform: uppercase;
        }
      }

      a {
        background-color: var(--color-white);
        color: var(--color-black);
        display: block;
        text-align: center;
        text-decoration: none;
        width: 100%;
      }
    }

    &--socials {
      background-color: var(--color-white);
      margin-top: 2rem;
      padding: 1rem;

      h2 {
        font-size: 3rem;
        font-weight: 400;
        margin: 0;
        text-align: center;
        text-transform: uppercase;
      }

      ul {
        display: flex;
        align-items: center;
        justify-content: space-around;
        margin: 1rem 0 0 0;
        padding: 0 2rem;

        li {
          display: block;

          a {
            padding: 0.75rem;

            img {
              max-width: 1.5rem;
              object-fit: contain;
              width: 100%;
            }
          }
        }
      }
    }

    &--subscribe {
      background-color: var(--color-white);
      margin-top: 2rem;
      padding: 1rem;

      h2 {
        font-weight: 400;
        font-size: 3rem;
        margin: 0;
        text-align: center;
        text-transform: uppercase;
      }

      input[type="submit"] {
        background-color: var(--color-black);
        border: 1px solid transparent;
        color: var(--color-white);
        font-size: 2rem;
        font-weight: 700;
        margin-top: 0.5rem;
        text-align: center;
        text-transform: uppercase;
        width: 100%;

        &:hover,
        &:focus {
          transform: scale(1.05);
          cursor: pointer;
        }
      }
    }

    .footer {
      background-color: var(--color-white);
      font-weight: 700;
      margin-top: 4rem;
      padding: 1rem;
      text-align: center;

      p {
        padding: 0;
        margin: 0;

        &:last-of-type {
          margin-top: 0.5rem;
        }
      }

      a {
        color: var(--color-black);
        text-decoration: none;
      }
    }
  }
</style>

<BaseLayout title="SickSadGirls | Tarot, Patches, Pins + more!">
  <main class="main">
    <h1 class="main--title">Sick Sad Girls</h1>

    <section class="main--actions">
      <ul>
        {actions.map(({ href, text }) => (
          <li key={href}>
            <a href={href} target="_blank" rel="noopender noreferrer">{text}</a>
          </li>
        ))}
      </ul>
    </section>

    <section class="main--socials">
      <h2>Let's Be Friends</h2>

      <ul>
        {socials.map(({ icon, href, text }) => (
        <li key={icon}>
          <a href={href} target="_blank" rel="noopener noreferrer">
            <span class="sr-only">{text}</span>
            <img src={`/assets/${icon}.svg`} alt="" />
          </a>
        </li>
        ))}
      </ul>
    </section>

    <section class="main--subscribe">
      <!-- Begin Mailchimp Signup Form -->
      <div id="mc_embed_signup">
        <form action="https://sicksadgirls.us20.list-manage.com/subscribe/post?u=83b2841c4ffdb905116e34705&amp;id=fba6b3b252" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
          <div id="mc_embed_signup_scroll">
            <h2>Subscribe</h2>
            <div class="mc-field-group" style="margin-top: 1rem; display: flex; flex-direction: column;">
              <label for="mce-EMAIL" style="font-size: 1.5rem;">Email Address </label>
              <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" style="font-size: 2rem; margin-top: 0.25rem;" placeholder="cool@email.com">
            </div>
            <div id="mce-responses" class="clear foot">
              <div class="response" id="mce-error-response" style="display:none"></div>
              <div class="response" id="mce-success-response" style="display:none"></div>
            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_83b2841c4ffdb905116e34705_fba6b3b252" tabindex="-1" value=""></div>
            <div class="optionalParent">
              <div class="clear foot">
                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
              </div>
            </div>
          </div>
        </form>
      </div>
      <!--End mc_embed_signup-->
    </section>

    <footer class="footer">
      <p>&copy; {year} SickSadGirls, All Rights Reserved</p>

      <p>
        <span>Website built by: </span>
        <a href="mailto:brandon@ubben.co">brandon@ubben.co</a>
      </p>
    </footer>
  </main>
</BaseLayout>
